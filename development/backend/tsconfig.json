{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "lib": ["esnext"],
        "noImplicitAny": true,
        "moduleResolution": "node",
        "strictNullChecks": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "allowJs": true,
        "paths": {
            "*": [
                "node_modules/*",
            ],
            "generated": [ "generated" ]
        }
    },
    "include": [
        "src/**/*"
    ]
}